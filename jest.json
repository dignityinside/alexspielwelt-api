{
  "moduleFileExtensions": ["ts", "js"],
  "rootDir": ".",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testRegex": "^(?!.*\\.e2e-spec\\.ts$).*\\.spec\\.ts$",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@app/(.*)$": "<rootDir>/src/app/$1"
  },
  "moduleDirectories": ["node_modules", "src"]
}
